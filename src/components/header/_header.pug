// TOPANCHOR
#topAncher
// HEADER :: START
if headerTransparent
  - var headerClass = 'header__transparent'
else
  .anchor-top
    .anchor-top__container
      a.btn.btn-primary(href="/request") Оставить заявку
      a.btn.btn-primary.anchor-top__up(href="#topAncher")
        +svgMono('arrowUp')
header(class="header" + ' ' + headerClass)
  .container
    .header__wrapper
      a(href="/").header__logo
        +svgColor('logo-full')
        +svgColor('logo')
      if contentTitle || content
        h1.header__title
          span= contentTitle
          small= contentSubTitle
        .link-icon.header__link-icon
          a(href="#").link-icon.header__link.ssm.uppercase Связаться с нами
          a(href="#").link-icon__item.link-icon__item--telegram
            +svgColor('telegram')
          a(href="#").link-icon__item.link-icon__item--telegram
            +svgColor('whatsapp')

      button.header__hamburger.hamburger.js-hamburger
        span
        span
        span
        span
// MOBILE NAVI
.mobile-navi
  .mobile-navi__wrapper
    button.hamburger.hamburger--close.js-hamburger
      span
      span
    nav.mobile-navi__nav
      a(href="/context")
        h2
          | Контекстная
          small Реклама
      a(href="/target")
        h2
          | Таргетированная
          small Реклама
      a(href="/mobile")
        h2
          | Мобильное
          small продвижение
      a(href="/performance")
        h2
          | Перформанс
          small маркетинг
      .link-icon
        a(href="#").link-icon__item.link-icon__item--telegram
          +svgColor('telegram')
        a(href="#").link-icon__item.link-icon__item--telegram
          +svgColor('whatsapp')
      a(href='/request').btn.btn-primary Оставить заявку
    .mobile-navi__cta
      a(href="mailto:sergey@khmelevskoy.co sergey@khmelevskoy.co")
